<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#add-modal">
            <i class="fas fa-plus"></i> Add Bank
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name Bank</th>
                        <th>Nomor Rekening</th>
                        <th>Name</th>
                        <th>image</th>
                        <th>action</th>
                    </tr>
                <tbody>
                    <!--data Category-->
                    <% banks.forEach( (bank,index) => { %>
                    <tr>
                        <td> <%= index + 1 %> </td>
                        <td> <%= bank.nameBank %> </td>
                        <td> <%= bank.nomorRekening %> </td>
                        <td> <%= bank.name  %> </td>
                        <td> <img src="/public/<%= bank.imageUrl %> " alt="<%= bank.imageUrl  %>" width="60px"> </td>
                        <td>
                            <a href="javascript:void()" class="btn btn-warning btn-circle btn-sm  button-edit-bank"
                                data-id="<%= bank.id  %>" data-namebank="<%= bank.nameBank %>"
                                data-nomorrekening="<%= bank.nomorRekening %>" data-name="<%= bank.name  %>"
                                data-imageurl="<%= bank.imageUrl %> ">

                                <i class="fas fa-edit"></i></a>
                            <a href="javascript:void()" class="btn btn-danger btn-circle btn-sm button-delete-bank"
                                data-id="<%= bank.id  %>" data-namebank="<%= bank.nameBank %>"
                                data-nomorrekening="<%= bank.nomorRekening %>"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
                </thead>
            </table>
        </div>
    </div>
</div>


<!-- Modal add Bank-->
<div class="modal fade" id="add-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Bank</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/bank" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nameBank" class="form-label">Name Bank</label>
                        <input type="text" class="form-control" id="nameBank" name="nameBank"
                            placeholder="Enter text..." required>
                    </div>
                    <div class="mb-3">
                        <label for="nomorRekening" class="form-label">Nomor Rekening</label>
                        <input type="text" class="form-control" id="nomorRekening" name="nomorRekening"
                            placeholder="Enter text..." required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter text..."
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="imageUrl" class="form-label">Image</label>
                        <input type="file" class="form-control" id="imageUrl" name="imageUrl" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal edit Bank-->
<div class="modal fade" id="modal-edit-bank" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/bank?_method=put" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nameBank" class="form-label">Name Bank</label>
                        <input type="text" class="form-control nameBank" name="nameBank" placeholder="Enter text..."
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="nomorRekening" class="form-label">Nomor Rekening</label>
                        <input type="text" class="form-control nomorRekening" id="nomorRekening" name="nomorRekening"
                            placeholder="Enter text..." required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control name" id="name" name="name" placeholder="Enter text..."
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="imageUrl" class="form-label">Image</label>
                        <input type="file" class="form-control " id="imageUrl" name="imageUrl" value="imageUrl">
                    </div>
                    <input type="hidden" class="form-control id" id="id" name="id">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal delete Bank-->
<div class="modal fade" id="modal-delete-bank" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Bank</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="post" id="formBankdelete">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nameBank" class="form-label">Are you sure you want to delete it?</label>
                        <input type="text" class="form-control value" readonly>
                        <input type="hidden" class="form-control nameBank" id="nameBank" name="nameBank">
                        <input type="hidden" class="form-control nomorRekening" id="nomorRekening" name="nomorRekening">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>